{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
